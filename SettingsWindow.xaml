<Window x:Class="StickyTimer.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StickyTimer"
        mc:Ignorable="d"
        Title="SettingsWindow"  Width="650"
         Height="500"
         MinWidth="300"
         MinHeight="100"
         AllowsTransparency="True"
         Background="Transparent"
         ResizeMode="CanResize"
         Topmost="True"
         WindowStyle="None">
    <Border
        Background="#19006400"
        ClipToBounds="True"
        CornerRadius="10"
        >
        <Grid Margin="3">
            <Grid.RowDefinitions>
                <!-- Close/Drag/etc -->
                <RowDefinition Height="Auto"/>
                <!-- Seperation line -->
                <RowDefinition Height="1"/>
                <!-- Light/Dark Mode Dropdown -->
                <RowDefinition Height="Auto"/>
                <!-- Background Transperency Slider -->
                <RowDefinition Height="Auto"/>
                <!-- Alarm Volume Slider -->
                <RowDefinition Height="Auto"/>
                <!-- Alarm sound selector (Spot to insert .wav or something) -->
                <RowDefinition Height="Auto"/>
                <!-- Pomodoro Mode Checkbox -->
                <RowDefinition Height="Auto"/>
                <!-- Pomodoro Options Grid -->
                <RowDefinition Height="*"/>

            </Grid.RowDefinitions>

        </Grid>

    </Border>
        
   
</Window>
