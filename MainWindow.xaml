<Window x:Class="StickyTimer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Countdown Timer" Height="80" Width="200"
        WindowStyle="None" 
        AllowsTransparency="True" 
        Background="Transparent"
        Topmost="True"
        ResizeMode="NoResize">
    <Canvas>
        <TextBlock x:Name="CountdownText"
                   FontSize="48"
                   Foreground="White"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Top"
                   Text="00:10" Canvas.Left="43" Canvas.Top="8" />

        <Button x:Name="btn_StartTimer"
                Click="btn_StartTimer_Click"
                Background="Transparent" 
                Content="&#xE768;" 
                FontFamily="Segoe MDL2 Assets"
                Foreground="White"
                FontSize="30"
                Width="35"
                Height="35"
                HorizontalContentAlignment="Center"
                VerticalContentAlignment="Center"
                Margin="162,27,3,18"/>
        <Button x:Name="btn_PauseTimer"
                Visibility="Collapsed"
                Click="btn_PauseTimer_Click"
                Background="Transparent" 
                Content="&#xE769;" 
                FontFamily="Segoe MDL2 Assets"
                Foreground="White"
                FontSize="30"
                Width="35"
                Height="35"
                HorizontalContentAlignment="Center"
                VerticalContentAlignment="Center"
                Margin="162,27,3,18"/>
        <Rectangle x:Name="rect_HandleBar"
                   MouseDown="rect_HandleBar_MouseDown"
                   Width="4" 
                   Height="40" 
                   Cursor="ScrollAll"
                   Fill="Gray" 
                   RadiusX="2" 
                   RadiusY="2" 
                   Margin="34,24,162,16"/>
    </Canvas>
</Window>