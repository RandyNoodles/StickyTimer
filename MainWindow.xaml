<Window
    x:Class="StickyTimer.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Countdown Timer"
    Width="190"
    Height="80"
    MinWidth="100"
    MinHeight="50"
    AllowsTransparency="True"
    Background="Transparent"
    ResizeMode="CanResize"
    Topmost="True"
    WindowStyle="None">
    <Border
        Background="#19006400"
        ClipToBounds="True"
        CornerRadius="10">
        <Grid Margin="3">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="1" />
                <RowDefinition Height="* " />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <!--  Draggable Area  -->
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <Border
                Grid.Column="0"
                Background="Transparent"
                MouseLeftButtonDown="DragArea_MouseLeftButtonDown" />

            <!--  Line marking bottom of topbar  -->

            <Rectangle
                x:Name="rect_ToolbarBottomBorder"
                Grid.Row="1"
                Grid.ColumnSpan="2"
                Fill="DarkGray" />

            <!--  X, fullscreen, settings buttons  -->
            <StackPanel
                Grid.Row="0"
                Grid.Column="1"
                Orientation="Horizontal">
                <Button
                    x:Name="btn_Settings"
                    Width="20"
                    Height="20"
                    VerticalAlignment="Center"
                    HorizontalContentAlignment="Center"
                    VerticalContentAlignment="Center"
                    Background="Transparent"
                    BorderBrush="Transparent"
                    Click="btn_Settings_Click"
                    Content="&#xF8B0;"
                    FontFamily="Segoe MDL2 Assets"
                    FontSize="15"
                    Foreground="White"
                    ToolTip="Settings" />
                <Button
                    x:Name="btn_Fullscreen"
                    Width="20"
                    Height="20"
                    VerticalAlignment="Center"
                    HorizontalContentAlignment="Center"
                    VerticalContentAlignment="Center"
                    Background="Transparent"
                    BorderBrush="Transparent"
                    Content="&#xE92D;"
                    FontFamily="Segoe MDL2 Assets"
                    FontSize="15"
                    Foreground="White"
                    ToolTip="Fullscreen Mode" />
                <Button
                    x:Name="btn_Close"
                    Width="20"
                    Height="20"
                    VerticalAlignment="Center"
                    HorizontalContentAlignment="Center"
                    VerticalContentAlignment="Center"
                    Background="Transparent"
                    BorderBrush="Transparent"
                    Click="btn_Close_Click"
                    Content="&#xE8BB;"
                    FontFamily="Segoe MDL2 Assets"
                    FontSize="15"
                    Foreground="White"
                    ToolTip="Exit" />
            </StackPanel>
            <Viewbox
                Grid.Row="2"
                Grid.ColumnSpan="2"
                VerticalAlignment="Center"
                Stretch="Uniform">
                <DockPanel Grid.ColumnSpan="2" HorizontalAlignment="Center">

                    <!--
                        Style to make time sections look like TextBlocks.
                        - On "Play", set to readonly
                        - Background/border hidden
                        - Cursor = Arrow
                        -
                    -->
                    <TextBox
                        x:Name="CountDownHours"
                        VerticalAlignment="Center"
                        Background="Transparent"
                        BorderThickness="0"
                        CaretBrush="Transparent"
                        Cursor="Arrow"
                        DockPanel.Dock="Left"
                        FontSize="48"
                        Foreground="White"
                        GotFocus="DigitBox_GotFocus"
                        LostFocus="DigitBox_LostFocus"
                        MaxLength="2"
                        PreviewKeyDown="DigitBox_PreviewKeyDown"
                        PreviewTextInput="DigitBox_PreviewTextInput"
                        Tag="Next:CountDownMinutes"
                        Text="00" />
                    <TextBlock
                        x:Name="SeperatorHoursMinutes"
                        VerticalAlignment="Center"
                        Cursor="Arrow"
                        DockPanel.Dock="Left"
                        FontSize="48"
                        Foreground="White"
                        Text=":" />
                    <TextBox
                        x:Name="CountDownMinutes"
                        VerticalAlignment="Center"
                        Background="Transparent"
                        BorderThickness="0"
                        CaretBrush="Transparent"
                        DockPanel.Dock="Left"
                        FontSize="48"
                        Foreground="White"
                        GotFocus="DigitBox_GotFocus"
                        LostFocus="DigitBox_LostFocus"
                        PreviewKeyDown="DigitBox_PreviewKeyDown"
                        PreviewTextInput="DigitBox_PreviewTextInput"
                        Tag="Next:CountDownSeconds"
                        Text="00" />
                    <TextBlock
                        x:Name="SeperatorMinutesSeconds"
                        VerticalAlignment="Center"
                        Cursor="Arrow"
                        DockPanel.Dock="Left"
                        FontSize="48"
                        Foreground="White"
                        Text=":" />
                    <TextBox
                        x:Name="CountDownSeconds"
                        Margin="0,0,10,0"
                        VerticalAlignment="Center"
                        Background="Transparent"
                        BorderThickness="0"
                        CaretBrush="Transparent"
                        DockPanel.Dock="Left"
                        FontSize="48"
                        Foreground="White"
                        GotFocus="DigitBox_GotFocus"
                        LostFocus="DigitBox_LostFocus"
                        PreviewKeyDown="DigitBox_PreviewKeyDown"
                        PreviewTextInput="DigitBox_PreviewTextInput"
                        MouseWheel="CountDownSeconds_MouseWheel"
                        Tag="Next:CountDownHours"
                        Text="00" />
                    <Button
                        x:Name="btn_StartTimer"
                        Width="35"
                        Height="35"
                        VerticalAlignment="Center"
                        HorizontalContentAlignment="Center"
                        VerticalContentAlignment="Center"
                        Background="Transparent"
                        BorderBrush="Transparent"
                        Click="btn_PauseOrPlayTimer"
                        Content="&#xE768;"
                        DockPanel.Dock="Left"
                        FontFamily="Segoe MDL2 Assets"
                        FontSize="30"
                        Foreground="White" />

                </DockPanel>
            </Viewbox>
        </Grid>

    </Border>
</Window>